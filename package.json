{
  "name": "kiwi-t9",
  "version": "1.0.0",
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "get_tweets": "node tweets/getTweets.js",
    "make:frequencies": "node tweets/getWordFrequencies.js",
    "make:suggestions": "node server/utils/makeSuggestions.js",
    "add_language": "bash -c 'npm run get_tweets $0 && npm run make:frequencies $0 && npm run make:suggestions $0'",
    "build:firebase": "mkdir -p public/static && cp client/{dist,fonts}/* public/static && cp client/index.html public",
    "deploy": "npm run build:firebase && firebase deploy --only hosting,functions",
    "start": "npm-run-all --parallel watch:build watch:server",
    "watch:build": "webpack --watch",
    "watch:server": "nodemon server/index.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "nglgzz",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "enzyme-to-json": "^3.3.3",
    "express": "^4.16.3",
    "firebase-admin": "^5.12.0",
    "firebase-functions": "^1.0.2",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-promise-middleware": "^5.1.1",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.1.4",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "twitter": "^1.7.1",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "dist",
      "public"
    ],
    "exec": "sass-lint -v client/sass/* && eslint --ext js,jsx . && node",
    "ext": "jsx,js,html,sass"
  },
  "babel": {
    "presets": [
      "babel-preset-env",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "setupFiles": ["<rootDir>/client/__test__/jestSetup.js"],
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "moduleFileExtensions": ["js", "jsx"],
    "moduleDirectories": ["node_modules", "client"],
    "moduleNameMapper": {
      "\\.sass$": "<rootDir>/client/__test__/styleMock.js",
      "axios": "<rootDir>/client/__test__/axiosMock.js"
    }
  }
}
